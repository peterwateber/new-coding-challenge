		"outputDirectory": "./dist/api",
		"controllerPathGlobs": [
			"./src/controllers/**/index.ts"
		]
	},
	"routes": {
		"basePath": "/api/v1",
		"entryFile": "./src/index.ts",
		"routesDir": "./src/routes",
		"middleware": "koa"
	}
}